{
  "name": "mobi-cedro-api-ts",
  "version": "1.0.0",
  "main": "index.js",
  "author": "joaquim firmo ferreira neto",
  "license": "MIT",
  "scripts": {
    "start": "TZ='UTC' node dist/src/index.js",
    "dev": "TZ='UTC' ts-node-dev  --respawn --transpile-only src/index.ts",
    "test": "jest --coverage --detectOpenHandles",
    "build": "tsc",
    "migrate": "node-pg-migrate",
    "migrate:run": "node-pg-migrate up"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js|tsx|jsx)"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageReporters": [
      "text-summary",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.3.1",
    "hapi-auth-jwt2": "^10.5.1",
    "hapi-rbac": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/hapi": "^18.0.14",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.8.6",
    "@types/pg": "^8.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
